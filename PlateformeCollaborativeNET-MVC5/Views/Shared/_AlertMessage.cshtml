<div @*th:switch="${decision}"*@ class="mt-3">







</div>

<div @*th:if="${param.error}"*@ class="alert alert-danger">
    Please verify that your identifiers are correct
</div>
<div @*th:if="${param.logout}"*@ class="alert alert-success">
    You have been logged out.
</div>

@{
    switch (ViewBag.AlertType)
    {
        case "CreationSuccess":
            <div id="alertCreate" class="alert alert-success">
                <strong>Success!</strong> The user is created. You may access your account.
            </div>
            break;  // Always break each case
        case "EmailAlreadyUsed":
            <div id="alertCreate" class="alert alert-warning">
                <strong>Error!</strong> we cannot create user, email already used.
            </div>
            break;
        case "IncorrectInput":
            <div id="alertCreate" class="alert alert-warning">
                <strong>Error!</strong> Please verify that your inputs are correct
            </div>
            break;
            
        case "IncorrectIdentifiers":
            <div id="alertCreate" class="alert alert-danger">
                <strong>Error!</strong> Incorrect identifiers
            </div>
            break;
    }
}